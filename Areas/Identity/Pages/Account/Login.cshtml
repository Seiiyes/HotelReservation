@page
@using Microsoft.AspNetCore.Identity.UI.V5.Pages.Account.Internal
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container glass-surface">
    <h2 class="text-center mb-3">@ViewData["Title"]</h2>
    <p class="text-center text-muted mb-4">Use una cuenta local para iniciar sesión.</p>

    <section>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Recordarme
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
            </div>
            <hr class="my-4" />
            <div class="text-center">
                <p class="mb-1"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tiene una cuenta? Registrarse</a></p>
                <p class="mb-0 small"><a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a></p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model HotelReservations.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>Eliminar Cliente</h2>

<h3>¿Está seguro que desea eliminar este cliente?</h3>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>

    <dt class="col-sm-2">Documento</dt>
    <dd class="col-sm-10">@Model.DocumentoIdentidad</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.ClienteId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

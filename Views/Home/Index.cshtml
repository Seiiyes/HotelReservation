﻿@{
    ViewData["Title"] = "Panel de Control";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bienvenido al Sistema de Gestión Hotelera</h1>
    <p class="lead text-muted">Administre todos los aspectos de su hotel desde este panel central.</p>
</div>

<div class="row g-4">

    <!-- Card: Gestionar Reservas -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-0">Reservas</h5>
                        <p class="card-text text-muted">Cree y administre las estancias de los huéspedes.</p>
                    </div>
                </div>
                <div class="mt-auto">
                    <a asp-controller="Reservas" asp-action="Index" class="btn btn-outline-primary w-100">
                        Gestionar Reservas <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Gestionar Habitaciones -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-building fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-0">Habitaciones</h5>
                        <p class="card-text text-muted">Configure los tipos de habitación, precios y disponibilidad.</p>
                    </div>
                </div>
                <div class="mt-auto">
                    <a asp-controller="Habitaciones" asp-action="Index" class="btn btn-outline-success w-100">
                        Ver Habitaciones <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Gestionar Clientes -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-0">Clientes</h5>
                        <p class="card-text text-muted">Administre la información de contacto de sus huéspedes.</p>
                    </div>
                </div>
                <div class="mt-auto">
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-info w-100">
                        Administrar Clientes <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Gestionar Pagos -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-cash-coin fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-0">Pagos</h5>
                        <p class="card-text text-muted">Registre y consulte los pagos de las reservas.</p>
                    </div>
                </div>
                <div class="mt-auto">
                    <a asp-controller="Pagos" asp-action="Index" class="btn btn-outline-warning w-100">
                        Ver Historial de Pagos <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Reportes -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-file-earmark-bar-graph fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-0">Reportes</h5>
                        <p class="card-text text-muted">Visualice datos clave para la toma de decisiones.</p>
                    </div>
                </div>
                <div class="mt-auto">
                    <a asp-controller="Reportes" asp-action="Pagos" class="btn btn-outline-danger w-100">
                        Generar Reportes <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Call to Action -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm bg-light border-2 border-primary">
            <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                <h5 class="card-title">¿Listo para una nueva reserva?</h5>
                <p class="card-text">Cree una nueva reserva para un cliente existente o nuevo de forma rápida y sencilla.</p>
                <a asp-controller="Reservas" asp-action="Create" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-plus-circle-fill"></i> Crear Nueva Reserva
                </a>
            </div>
        </div>
    </div>

</div>

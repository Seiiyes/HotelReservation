@{
    ViewData["Title"] = "Dashboard - HotelReservations";
}

<style>
    .dash-card {
        transition: transform 0.12s ease, box-shadow 0.12s ease;
        cursor: pointer;
    }
    .dash-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    .dash-icon {
        font-size: 2.4rem;
        line-height: 1;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Panel de control</h1>
            <small class="text-muted">Accesos rápidos a los Modulos principales</small>
        </div>
        <div>
            <a class="btn btn-outline-secondary" asp-controller="Clientes" asp-action="Index">Ir a Clientes</a>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="Clientes" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-primary">👥</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Clientes</h5>
                            <p class="card-text mb-0 small text-muted">Crear, listar, editar y eliminar clientes.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="Reservas" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-success">📅</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Reservas</h5>
                            <p class="card-text mb-0 small text-muted">Gestiona reservas: crear, ver y cancelar.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="Habitaciones" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-warning">🛏️</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Habitaciones</h5>
                            <p class="card-text mb-0 small text-muted">Lista de habitaciones y disponibilidad.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="ServiciosAdicionales" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-info">🛎️</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Servicios</h5>
                            <p class="card-text mb-0 small text-muted">Desayuno, spa, wifi y otros servicios.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="Pagos" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-danger">💳</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Pagos</h5>
                            <p class="card-text mb-0 small text-muted">Registrar y consultar pagos de reservas.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4">
            <a asp-controller="Clientes" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card dash-card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <span class="dash-icon text-secondary">⚙️</span>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Configuración</h5>
                            <p class="card-text mb-0 small text-muted">Ajustes del sistema y datos maestros.</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

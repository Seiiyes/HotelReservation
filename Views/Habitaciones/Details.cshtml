@model HotelReservations.Models.Habitacion

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<h2>Detalles de la Habitación</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Tipo: @Model.Tipo</h5>
        <p><strong>Capacidad:</strong> @Model.Capacidad</p>
        <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
        <p><strong>Disponible:</strong> @(Model.Disponible ? " Sí" : " No")</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.HabitacionId" class="btn btn-warning"> Editar</a>
<a asp-action="Index" class="btn btn-secondary"> Volver</a>

@model HotelReservations.Models.Habitacion

@{
    ViewData["Title"] = "Crear Habitaci√≥n";
}

<h2>Crear Habitaci√≥n</h2>

<form asp-action="Create" asp-controller="Habitaciones" method="post">
    @Html.AntiForgeryToken()

    <!-- üîπ Aqu√≠ mostramos los errores generales -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Tipo" class="control-label"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacidad" class="control-label"></label>
        <input asp-for="Capacidad" class="form-control" />
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" type="number" step="1" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Disponible" class="form-check-input" type="checkbox" />
        <label asp-for="Disponible" class="form-check-label"></label>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
